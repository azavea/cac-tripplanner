[Unit]
Description=Start OpenTripPlanner process
After=network-online.target

[Service]
User={{ otp_user }}
WorkingDirectory={{ otp_bin_dir }}
ExecStart=/usr/bin/authbind /usr/bin/java -Xmx{{otp_process_mem}} -jar {{ otp_bin_dir }}/otp-{{ otp_version }}.jar --server --analyst --port 80 --basePath {{ otp_data_dir}} --graphs {{ otp_data_dir }} --router default

[Install]
WantedBy=multi-user.target
